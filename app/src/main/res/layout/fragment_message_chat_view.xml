<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MessageChatViewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:padding="6dp"
                android:src="@drawable/leftarrow"
                android:contentDescription="@string/left_arrow" />

            <ImageView
                android:layout_height="35dp"
                android:layout_width="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/tzuyuu"
                android:background="@drawable/profile_corners"
                android:layout_centerVertical="true"
                android:scaleType="centerCrop"
                android:contentDescription="@string/pfp"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:clipToOutline="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spartan_bold"
                android:layout_weight="1"
                android:text="@string/chats"
                android:textColor="#ffff"
                android:textSize="20sp" />

            <ImageView
                android:layout_width="35dp"
                android:layout_height="match_parent"
                android:padding="3dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/search"
                android:contentDescription="@string/search"/>

            <ImageView
                android:id="@+id/toSetting"
                android:layout_width="45dp"
                android:layout_height="match_parent"
                android:src="@drawable/menu"
                android:contentDescription="@string/menu"/>

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:layout_marginStart="30dp"
                android:background="@drawable/rounded_corners"
                android:fontFamily="@font/spartan_medium"
                android:gravity="center"
                android:padding="3dp"
                android:text="@string/all"
                android:textColor="#000000" />

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/spartan_medium"
                android:gravity="center"
                android:text="@string/direct"
                android:textColor="#ffff" />

            <TextView
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:fontFamily="@font/spartan_medium"
                android:gravity="center"
                android:text="@string/project_discussion"
                android:textColor="#ffff"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp"/>

        </RelativeLayout>

        <ScrollView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#161804"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="540dp"
                    android:background="#ffffff"
                    android:orientation="vertical"
                    tools:ignore="TextSizeCheck">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_bottom"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/rounded_corners"
                            android:clipToOutline="true"
                            android:contentDescription="@string/logo"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/woodableslogo"
                            tools:ignore="UnusedAttribute" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spartan_bold"
                                android:text="@string/woodables_team"
                                android:textColor="#000000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spartan_medium"
                                android:text="@string/bjorg_thank_you"
                                android:textColor="#000000" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_bottom"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/rounded_corners"
                            android:clipToOutline="true"
                            android:contentDescription="@string/logo"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/krustykrab"
                            tools:ignore="UnusedAttribute,ImageContrastCheck" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spartan_bold"
                                android:text="@string/krusty_krab_project"
                                android:textColor="#000000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spartan_medium"
                                android:text="@string/patrick"
                                android:textColor="#000000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spartan_medium"
                                android:text="@string/message2"
                                android:textColor="#000000" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_bottom"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/rounded_corners"
                            android:clipToOutline="true"
                            android:contentDescription="@string/logo"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/nue"
                            tools:ignore="UnusedAttribute,ImageContrastCheck" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spartan_bold"
                                android:text="@string/weebify_project"
                                android:textColor="#000000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spartan_medium"
                                android:text="@string/message1"
                                android:textColor="#000000" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_bottom"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/rounded_corners"
                            android:clipToOutline="true"
                            android:contentDescription="@string/logo"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hazzaf"
                            tools:ignore="UnusedAttribute,ImageContrastCheck" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spartan_bold"
                                android:text="@string/hazzaf_aladeen"
                                android:textColor="#000000" />

                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_bottom"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/rounded_corners"
                            android:clipToOutline="true"
                            android:contentDescription="@string/logo"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ome5"
                            tools:ignore="UnusedAttribute,ImageContrastCheck" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spartan_bold"
                                android:text="@string/amabatu_basst"
                                android:textColor="#000000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spartan_medium"
                                android:text="@string/message3"
                                android:textColor="#000000" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border_bottom"
                        android:orientation="horizontal"
                        android:paddingBottom="5dp"
                        tools:ignore="UselessParent">

                        <ImageView
                            android:layout_width="75dp"
                            android:layout_height="75dp"
                            android:layout_marginStart="30dp"
                            android:layout_marginTop="10dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/rounded_corners"
                            android:clipToOutline="true"
                            android:contentDescription="@string/logo"
                            android:cropToPadding="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/anita"
                            tools:ignore="UnusedAttribute,ImageContrastCheck" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="20dp"
                            android:layout_marginTop="20dp"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spartan_bold"
                                android:text="@string/anita_max_wynn"
                                android:textColor="#000000" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/spartan_medium"
                                android:text="@string/message4"
                                android:textColor="#000000" />
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>


            </RelativeLayout>

        </ScrollView>
    </LinearLayout>




</FrameLayout>