<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ForgotPasswordActivity"
    android:background="#161804">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:src="@drawable/woodableslogo" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/spartan_medium"
        android:text="@string/app_name"
        android:textStyle="bold"
        android:textColor="#d6ae80"
        android:textSize="20sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:fontFamily="@font/spartan_medium"
        android:textAlignment="center"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="35dp"
        android:text="@string/description"
        android:textStyle="bold"
        android:textColor="#ffff"
        android:textSize="14sp"
        android:letterSpacing="0.07"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:background="@drawable/background_curved_corners">

        <TextView
            android:id="@+id/forgotView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Forgot Password?"
            android:textStyle="bold"
            android:textColor="#000000"
            android:textSize="20dp"
            android:fontFamily="@font/spartan_medium"
            android:textAlignment="center"
            android:layout_marginTop="20dp"
            android:layout_marginStart="110dp"/>

        <TextView
            android:id="@+id/forgotMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Input your email to recover your account."
            android:textColor="#000000"
            android:textSize="16dp"
            android:fontFamily="@font/spartan_medium"
            android:textAlignment="center"
            android:layout_marginTop="70dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:lineSpacingExtra="8dp"/>

        <EditText
            android:id="@+id/forgotemail"
            android:layout_width="250dp"
            android:layout_height="48dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="120dp"
            android:background="@drawable/textbox_4curvedcorners"
            android:inputType="text"
            android:paddingStart="25dp"
            android:paddingEnd="20dp"
            android:hint="@string/forgot_pass"
            android:textColor="@color/white" />

        <Button
            android:id="@+id/recoverbtn"
            android:layout_width="220dp"
            android:layout_height="58dp"
            android:layout_marginStart="100dp"
            android:layout_marginTop="220dp"
            android:backgroundTint="@color/cinnamon"
            android:text="@string/recover" />
    </RelativeLayout>

</LinearLayout>