<?xml version="1.0" encoding="utf-8"?>
<!-- community_post_item.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">

    <LinearLayout
        android:id="@+id/searchbargroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/backbutton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="0.5"
            android:src="@drawable/leftarrow"
            android:background="@color/background"/>

        <SearchView
            android:id="@+id/searchBarProfile"
            android:layout_width="0dp"
            android:layout_height="35dp"
            android:layout_weight="3"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/textbox_4curvedcorners"
            android:backgroundTint="@color/white"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="5dp"/>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="0.5"
            android:src="@drawable/whitesetting"
            android:background="@color/background"/>

    </LinearLayout>


    <View
        android:id="@+id/breaklinetop"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/searchbargroup"
        android:background="@color/white" />


    <LinearLayout
        android:id="@+id/optionpanel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/filterpostbtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:padding="10dp"
            android:layout_weight="1"
            android:src="@drawable/optionsetting"/>

        <Button
            android:id="@+id/bestpostbtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:backgroundTint="@color/indochine"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="Best"/>

        <Button
            android:id="@+id/hotpostbtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:backgroundTint="@color/schoolbusyellow"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="Hot"/>

        <Button
            android:id="@+id/newpostbtn"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="7dp"
            android:backgroundTint="@color/cinnamon"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="New"
             />

        <Button
            android:id="@+id/toppostbtn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:backgroundTint="@color/btnColor"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="Top" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/listing"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp">

                    <ImageView
                        android:id="@+id/profileImage"
                        android:layout_marginTop="20dp"
                        android:layout_marginLeft="10dp"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:adjustViewBounds="true"
                        android:background="@drawable/rounded_corners"
                        android:clipToOutline="true"
                        android:contentDescription="@string/logo"
                        android:cropToPadding="true"
                        android:src="@drawable/catprofile"
                        android:scaleType="centerCrop"/>

                    <TextView
                        android:id="@+id/username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="w/User1209"
                        android:textStyle="bold"
                        android:layout_alignTop="@id/profileImage"
                        android:layout_toEndOf="@id/profileImage"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:id="@+id/title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:text="Harolds Bad day at the Company A - A WoodWorker Sentiment"
                        android:textStyle="bold"
                        android:layout_below="@id/profileImage"
                        android:layout_centerInParent="true"
                        android:layout_marginTop="4dp"/>

                    <TextView
                        android:id="@+id/text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Maecenas euismod urna non enim viverra, eu lobortis nulla fringilla. Pellentesque nibh ligula, lacinia ut eleifend in, ullamcorper nec odio"
                        android:layout_below="@id/title"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginBottom="20dp"
                        android:layout_marginTop="4dp"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

        <ImageView
            android:id="@+id/addpost"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/cinnamonadd"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="20dp"
            android:layout_marginEnd="20dp"/>

    </RelativeLayout>







    <!-- Navigation bar -->

    <View
        android:id="@+id/breaklinebottom"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="2dp"/>

    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@color/background"
        android:orientation="horizontal">


        <ImageView
            android:id="@+id/home"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/home" />

        <ImageView
            android:id="@+id/community"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/chat" />

        <ImageView
            android:id="@+id/hammer"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/hammer" />

        <ImageView
            android:id="@+id/messenger"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/messenger" />

        <ImageView
            android:id="@+id/documents"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_weight="1"
            android:clickable="true"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:src="@drawable/approve" />
    </LinearLayout>
    <!--Ari ra kutob ang navagation bar -->

</LinearLayout>


